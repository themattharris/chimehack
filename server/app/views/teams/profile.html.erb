<div class="centered">
  <%= image_tag "social-btns.jpg" -%>
  <div class="circle pad_photo"></div>
  <h5><%= @user.name -%>'s raised <br /><strong>
      $<%= @user.total_referrals.floor -%>
    </strong> of the <strong>
      $<%= @challenge.target.floor -%>
  </strong> goal</h5>
</div>

<table class="table table-hover leaderboard">
  <thead>
    <tr>
      <th colspan="2" style="text-align:center;">Marin Elementary Leaderboard</th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <td>#1</td>
    <td>Mark O.</td>
  </tr>
  <tr>
    <td>#2</td>
    <td>Jacob T.</td>
  </tr>
  <tr>
    <td>#3</td>
    <td>Allison B.</td>
  </tr>
  </tbody>
</table>

<div class="donation-btn centered">
  <a type="button" class="btn btn-donate" href='/donations/new'>Donate</a>
  <div class="slider-wrap">
    <strong>$1</strong><input class="slider" data-slider-id='ex1Slider' type="text" /><strong>$100</strong>
  </div>
  <h5 class='donationReward' style='font-weight: 100'><h5>
</div>

<% if @donations.any? %>
<div class="centered">
  <h4>Thank you to our contributors</h4>
  <table class="table table-hover contributors">
    <tbody>
    <% @donations.each do |donation| %>
    <tr>
      <td class='align-left'><%= donation.donor.name %></td>
      <td class='align-right'>$<%= donation.donor.total_donations.floor %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
  <a type="button" class="btn btn-donate" href="/donations/new">Donate</a>
</div>
<% end %>

